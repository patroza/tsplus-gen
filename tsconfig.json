{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "rootDir": "src",
    "lib": ["ESNext"],
    "target": "ES2021",
    "moduleResolution": "NodeNext",
    "module": "ES6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "paths": {
      "tsplus-gen/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
